<h1>Listing apprentices</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apprentices.each do |apprentice| %>
      <tr>
        <td><%= apprentice.name %></td>
        <td><%= apprentice.email %></td>
        <td><%= link_to 'Show', apprentice %></td>
        <td><%= link_to 'Edit', edit_apprentice_path(apprentice) %></td>
        <td><%= link_to 'Destroy', apprentice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Apprentice', new_apprentice_path %>
