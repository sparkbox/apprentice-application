<h2 class="input-header">Basic Information</h2>
  <%= f.text_field :first_name, :class => 'text-short', :placeholder => 'first name', :maxlength => '128'%>
  <%= f.text_field :last_name, :class => 'text-short', :placeholder => 'last name', :maxlength => '128'%>
  <%= f.text_field :email, :class => 'text-short', :placeholder => 'email', :maxlength => '128' %>
<h2 class="input-header">What dates are you available?</h2>
  <%= f.date_field :start_date, :class => 'dates_available', :placeholder => 'from' %>
  <%= f.date_field :start_date, :class => 'dates_available', :placeholder => 'to' %>
<h2 class="input-header">Are you willing to move to Dayton, Ohio?</h2>
<div class="yes-no">
  <%= f.radio_button :willing_to_move, :class => 'willing_to_relocate', :value => 'yes'%><p class="yes-no--response">Yes. I'll be there.</p>
  <%= f.radio_button :willing_to_move, :class => 'willing_to_relocate', :value => 'no'%><p class="yes-no--response">No. I'm too cool for Dayton.</p>
</div>